@model IEnumerable<ShopFruistConnection.LOAISANPHAM>
@{
    ViewBag.Title = "Index";
}

<h2>List ProductType</h2>

<table class="table table-striped">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr align="center">
                <th>Mã loại sản phẩm</th>
                <th>Tên loại sản phẩm</th>
                <th>Xóa</th>
                <th>Sửas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX" align="center">
                    <td>@item.MaLoaiSanPham</td>
                    <td>@item.TenLoaiSanPham</td>
                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="@Url.Action("Delete", "ProductType", new { id=item.MaLoaiSanPham })"> Xóa</a></td>
                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="@Url.Action("Edit", "ProductType", new { id=item.MaLoaiSanPham })">Sửa</a></td>
                </tr>
            }
        </tbody>
    </table>
</table>

