
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
    <div class="">
        <div class="form-group">
            <label for="tensp">Tên sản phẩm</label>
            <input type="text" class="form-control" id="tensp" placeholder="Tên Sản phẩm" name="TenSanPham" value="@Model.TenSanPham">
        </div>
        <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
        <div class="form-group">
            <label for="gia">Giá</label>
            <input type="number" class="form-control" id="gia" placeholder="Giá sản phẩm" name="Gia" value="@Model.Gia">
        </div>
        <div class="ad-img-thumbnail">
            <img src="~/@Model.HinhAnh" alt="">
        </div>
        <input type="file" name="image" id="img" class="form-control" />

        <div class="form-group">
            <label for="mota">Mô tả</label>
            <textarea class="form-control tinymce" rows="3" id="mota" name="MoTa">@Html.Raw(Model.MoTa)</textarea>
        </div>
        <div class="form-group">
            <label>Mã sản phẩm <span class="required">*</span></label>
            <select class="form-control" name="LoaiSp">
                @foreach (var item in ViewBag.LoaiSanPham)
                {
                    if (Model.LoaiSp == @item.MaLoaiSanPham)
                    {
                        <option value="@item.MaLoaiSanPham" selected="selected">
                            @item.TenLoaiSanPham
                        </option>
                    }
                    else
                    {
                        <option value="@item.MaLoaiSanPham">
                            @item.TenLoaiSanPham
                        </option>
                    }

                }
            </select>
        </div>
        <button type="submit" name="submit" class="btn btn-success">Sửa sản phẩm</button>
        <button type="reset" name="reset" class="btn btn-danger">Reset</button>
    </div>
}

