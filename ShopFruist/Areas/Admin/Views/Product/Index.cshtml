@model IEnumerable<ShopFruistConnection.SANPHAM>
@{
    ViewBag.Title = "Index";
}

<h2>List Product</h2>

<table class="table table-striped">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr align="center">
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th>Loại sản phẩm</th>
                <th>Xóa </th>
                <th>Sửa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX" align="center">
                    <td>@item.MaSanPham</td>
                    <td>@item.TenSanPham</td>
                    <td>@item.Gia</td>
                    <td class="ad-img-thumbnail"><img src="~/@item.HinhAnh" alt=""></td>
                    <td>@item.LoaiSp</td>
                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="@Url.Action("Delete", "Product", new { id=item.MaSanPham })"> Xóa</a></td>
                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="@Url.Action("Edit", "Product", new { id=item.MaSanPham })">Sửa</a></td>
                </tr>
            }
        </tbody>
    </table>
</table>