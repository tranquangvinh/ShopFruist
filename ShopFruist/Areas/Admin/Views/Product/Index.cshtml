@model IEnumerable<ShopFruistConnection.SANPHAM>
@{
    ViewBag.Title = "Index";
}

<h2>Danh Sách Sản Phẩm</h2>

<table class="table table-striped">

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr align="center">
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th>Loại sản phẩm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX" align="center">
                    <td>@item.MaSanPham</td>
                    <td>@item.TenSanPham</td>
                    <td>@item.Gia</td>
                    <td class="ad-img-thumbnail"><img src="<?php echo IMG_URL . $item.Thumbnail" alt=""></td>
                    <td>@item.LoaiSp</td>
                    <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="@Url.Action("Delete", "SanPham", new { id=item.MaSanPham })"> Delete</a></td>
                    <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="@Url.Action("Edit", "SanPham", new { id=item.MaSanPham })">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</table>